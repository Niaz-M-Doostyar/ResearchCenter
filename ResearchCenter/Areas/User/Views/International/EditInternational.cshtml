<!-- End Navbar -->
<div class="panel-header panel-header-sm">
</div>
<div class="content">
    <div class="card">
        <div class="row mt-3 justify-content-center">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">Please fill with details</div>
                        <hr>
                        @for (int i = 0; i < Model.Rows.Count; i++)
                        {
                            using (Html.BeginForm("EditInternational", "International", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <div class="form-group">
                                    <label for="familyName">Family Name</label>
                                    <input type="text" class="form-control form-control-rounded" id="familyName" name="familyName" autocomplete="off" value="@Model.Rows[i][1]">
                                </div>
                                <div class="form-group">
                                    <label for="name">Name</label>
                                    <input type="text" class="form-control form-control-rounded" id="name" name="name" autocomplete="off" value="@Model.Rows[i][2]">
                                </div>
                                <div class="form-group">
                                    <label for="authors">Authors (1st, 2nd, 3rd ...)</label>
                                    <select class="form-control form-control-rounded" id="authors" name="authors">
                                        <option>@Model.Rows[i][3]</option>
                                        <option value="1st">1st</option>
                                        <option value="2nd">2nd</option>
                                        <option value="3rd">3rd</option>
                                        <option value="4th">4th</option>
                                        <option value="5th">5th</option>
                                        <option value="6th">6th</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="department">Department</label>
                                    <input type="text" class="form-control form-control-rounded" id="department" name="department" autocomplete="off" value="@Model.Rows[i][4]">
                                </div>
                                <div class="form-group">
                                    <label for="faculty">Faculty</label>
                                    <select class="form-control form-control-rounded" id="faculty" name="faculty">
                                        <option>@Model.Rows[i][5]</option>
                                        <option value="Computer Science">Computer Sciense</option>
                                        <option value="Economics">Economics</option>
                                        <option value="Education">Education</option>
                                        <option value="Engineering">Engineering</option>
                                        <option value="Journalism">Journalism</option>
                                        <option value="Language & Literature">Language & Literature</option>
                                        <option value="Law & Political Science">Law & Political Science</option>
                                        <option value="Medical">Medical</option>
                                        <option value="Pharmacy">Pharmacy</option>
                                        <option value="Public Administration & Policy">Public Administration & Policy</option>
                                        <option value="Sharia">Sharia</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="designation">Academic Rank</label>
                                    <select class="form-control form-control-rounded" id="designation" name="designation">
                                        <option>@Model.Rows[i][6]</option>
                                        <option value="Teaching Assistant">Teaching Assistant</option>
                                        <option value="Senior Teaching Assistant">Senior Teaching Assistant</option>
                                        <option value="Assistant Professor">Assistant Professor</option>
                                        <option value="Associate Professor">Associate Professor</option>
                                        <option value="Professor">Professor</option>
                                    </select>
                                </div>
                                @*<div class="form-group">
                                    <label for="speciality">Speciality</label>
                                    <input type="text" class="form-control form-control-rounded" id="speciality" name="speciality" autocomplete="off" value="@Model.Rows[i][7]" required>
                                </div>*@
                                <div class="form-group">
                                    <label for="title">Title</label>
                                    <input type="text" class="form-control form-control-rounded" id="title" name="title" autocomplete="off" value="@Model.Rows[i][8]" required>
                                </div>
                                <div class="form-group">
                                    <label for="artical">Type of Article</label>
                                    <select class="form-control form-control-rounded" id="artical" name="artical">
                                        <option>@Model.Rows[i][9]</option>
                                        <option value="Conference Paper">Conference Paper</option>
                                        <option value="Review Paper">Review Paper</option>
                                        <option value="Original Paper">Original Paper</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="journal">Journal Name</label>
                                    <input type="text" class="form-control form-control-rounded" id="journal" name="journal" autocomplete="off" value="@Model.Rows[i][10]" required>
                                </div>
                                <div class="form-group">
                                    <label for="journalName">Publisher Name</label>
                                    <input type="text" class="form-control form-control-rounded" id="journalName" name="journalName" autocomplete="off" value="@Model.Rows[i][11]" required>
                                </div>
                                <div class="form-group">
                                    <label for="language">Language</label>
                                    <input type="text" class="form-control form-control-rounded" id="language" name="language" autocomplete="off" value="@Model.Rows[i][12]" required>
                                </div>
                                <div class="form-group">
                                    <label for="issue">Issue</label>
                                    <input type="text" class="form-control form-control-rounded" id="issue" name="issue" autocomplete="off" value="@Model.Rows[i][14]" required>
                                </div>
                                <div class="form-group">
                                    <label for="page">Pages</label>
                                    <input type="text" class="form-control form-control-rounded" id="page" name="page" autocomplete="off" value="@Model.Rows[i][15]" required>
                                </div>
                                <div class="form-group">
                                    <label for="doi">DOI Link</label>
                                    <input type="text" class="form-control form-control-rounded" id="doi" name="doi" autocomplete="off" value="@Model.Rows[i][16]" required>
                                </div>
                                <div class="form-group">
                                    <label for="year">Date</label>
                                    @{
                                        var date = Model.Rows[i][13];
                                        if (date is DateTime dateTime)
                                        {

                                            <input type="date" id="year" name="year" value=@dateTime.ToString("yyyy-MM-dd") required>
                                        }
                                        else
                                        {
                                            @date;
                                        }
                                    }
                                </div>
                                <div class="form-group">
                                    <label for="pdf">PDF File <small style="font-weight:bold">(Maximum length 2MB)</small></label>
                                    <input type="file" id="pdf" name="pdf" value="@Model.Rows[i][17]">
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-light btn-round px-5">Save</button>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

