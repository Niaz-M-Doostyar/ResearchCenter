<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <link rel="icon" href=@Url.Content("/Areas/User/Content/img/RCLogo.png") type="image/x-icon">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>
        @ViewBag.Title
    </title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <!--     Fonts and icons     -->
    <!-- CSS Files -->
    <link href=@Url.Content("/Areas/User/Content/css/bootstrap.min.css") rel="stylesheet" />
    <link href=@Url.Content("/Areas/User/Content/css/now-ui-dashboard.css?v=1.5.0") rel="stylesheet" />
    <!-- CSS Just for demo purpose, don't include it in your project -->
    <link href=@Url.Content("/Areas/User/Content/demo/demo.css") rel="stylesheet" />
    <link href=@Url.Content("~/Content/css/app-style.css") rel="stylesheet" />
</head>
<body>
    <div class="wrapper ">
        <div class="sidebar" data-color="white">
            <!--
                Tip 1: You can change the color of the sidebar using: data-color="blue | green | orange | red | yellow"
            -->
            <div class="logo">
                <a href="#" class="simple-text logo-normal">
                    <img src="~/Contents/images/RCLogo.png" class="logo-icon" style="width:70px; height:40px;" alt="logo icon">
                    Research Center
                </a>
            </div>
            <div class="sidebar-wrapper" id="sidebar-wrapper">
                <ul class="nav">
                    <li>
                        <a href=@Url.Action("Index","Home")>
                            <i class="now-ui-icons design_app"></i>
                            <p>Dashboard</p>
                        </a>
                    </li>
                    <li>
                        <a href=@Url.Action("NationalList","National")>
                            <i class="now-ui-icons ui-1_zoom-bold"></i>
                            <p>National Paper</p>
                        </a>
                    </li>
                    <li>
                        <a href=@Url.Action("InternationalList","International")>
                            <i class="now-ui-icons ui-1_zoom-bold"></i>
                            <p>International Paper</p>
                        </a>
                    </li>
                    <li>
                        <a href=@Url.Action("UserProfile","Home")>
                            <i class="now-ui-icons users_single-02"></i>
                            <p>User Profile</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel" id="main-panel">
            @RenderBody()
            <footer class="footer">
                <div class=" container-fluid ">
                    <div class="copyright" id="copyright">
                        &copy; 2024 Research Center Kandahar University
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src=@Url.Content("/Areas/User/Content/js/core/jquery.min.js")></script>
    <script src=@Url.Content("/Areas/User/Content/js/core/popper.min.js")></script>
    <script src=@Url.Content("/Areas/User/Content/js/core/bootstrap.min.js")></script>
    <script src=@Url.Content("/Areas/User/Content/js/plugins/perfect-scrollbar.jquery.min.js")></script>

    <script src=@Url.Content("/Areas/User/Content/js/plugins/chartjs.min.js")></script>
    <!--  Notifications Plugin    -->
    <script src=@Url.Content("/Areas/User/Content/js/plugins/bootstrap-notify.js")></script>
    <!-- Control Center for Now Ui Dashboard: parallax effects, scripts for the example pages etc -->
    <script src=@Url.Content("/Areas/User/Content/js/now-ui-dashboard.min.js?v=1.5.0") type="text/javascript"></script><!-- Now Ui Dashboard DEMO methods, don't include it in your project! -->
    <script src=@Url.Content("/Areas/User/Content/demo/demo.js")></script>
    <script src=@Url.Content("/Areas/User/Content/js/national-validate.js")></script>
    <script>
        $(function () {
            deptInput();
            nameInput();
            journalInput();
            issueInput();
            titleInput();
            familyNameInput();
            authorsInput();
            specialityInput();
            articalInput();
            journalNameInput();
            languageInput();
            pageInput();
            doiInput();
        })
    </script>

</body>
</html>
