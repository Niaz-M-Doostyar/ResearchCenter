
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_MainLayoutPage.cshtml";
}

<div class="content-wrapper">
    <div class="container-fluid">

        <div class="row mt-3 justify-content-center">

            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">Please fill with details</div>
                        <hr>
                        @using (Html.BeginForm("Create", "InternationalPaper", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            <div class="form-group">
                                <label for="familyName">Family Name</label>
                                <input type="text" class="form-control form-control-rounded" id="familyNameInput" name="familyName" autocomplete="off" placeholder="Enter Your Family Name" required>
                            </div>
                            <div class="form-group">
                                <label for="name">Name</label>
                                <input type="text" class="form-control form-control-rounded" id="nameInput" name="name" autocomplete="off" placeholder="Enter Your Name" required>
                            </div>
                            <div class="form-group">
                                <label for="authors">Authors (1st, 2nd, 3rd ...)</label>
                                <select class="form-control form-control-rounded" id="authors" name="authors">
                                    <option>Which Author are you?</option>
                                    <option value="1st">1st</option>
                                    <option value="2nd">2nd</option>
                                    <option value="3rd">3rd</option>
                                    <option value="4th">4th</option>
                                    <option value="5th">5th</option>
                                    <option value="6th">6th</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="department">Department</label>
                                <input type="text" class="form-control form-control-rounded" id="deptInput" name="department" autocomplete="off" placeholder="Enter department" required>
                            </div>
                            <div class="form-group">
                                <label for="faculty">Faculty</label>
                                <select class="form-control form-control-rounded" id="faculty" name="faculty" required>
                                    <option value="" disabled selected>Select Your Faculty</option>
                                    <option value="Computer Science">Computer Sciense</option>
                                    <option value="Economics">Economics</option>
                                    <option value="Education">Education</option>
                                    <option value="Engineering">Engineering</option>
                                    <option value="Journalism">Journalism</option>
                                    <option value="Language & Literature">Language & Literature</option>
                                    <option value="Law & Political Science">Law & Political Science</option>
                                    <option value="Medical">Medical</option>
                                    <option value="Pharmacy">Pharmacy</option>
                                    <option value="Public Administration & Policy">Public Administration & Policy</option>
                                    <option value="Sharia">Sharia</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="designation">Academic Rank</label>
                                <select class="form-control form-control-rounded" id="designation" name="designation" required>
                                    <option value="" disabled selected>Select Your Academic Rank</option>
                                    <option value="Teaching Assistant">Teaching Assistant</option>
                                    <option value="Senior Teaching Assistant">Senior Teaching Assistant</option>
                                    <option value="Assistant Professor">Assistant Professor</option>
                                    <option value="Associate Professor">Associate Professor</option>
                                    <option value="Professor">Professor</option>
                                </select>
                            </div>
                            @*<div class="form-group">
                                <label for="speciality">Speciality</label>
                                <input type="text" class="form-control form-control-rounded" id="specialityInput" name="speciality" autocomplete="off" placeholder="Enter speciality" required>
                            </div>*@
                            <div class="form-group">
                                <label for="title">Title</label>
                                <input type="text" class="form-control form-control-rounded" id="titleInput" name="title" autocomplete="off" placeholder="Enter title" required>
                            </div>
                            <div class="form-group">
                                <label for="artical">Type of Article</label>
                                <select class="form-control form-control-rounded" id="artical" name="artical">
                                    <option>Select type of Article</option>
                                    <option value="Conference Paper">Conference Paper</option>
                                    <option value="Review Paper">Review Paper</option>
                                    <option value="Original Paper">Original Paper</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="journal">Journal Name</label>
                                <input type="text" class="form-control form-control-rounded" id="journalInput" name="journal" autocomplete="off" placeholder="Enter journal" required>
                            </div>
                            <div class="form-group">
                                <label for="journalName">Publisher Name</label>
                                <input type="text" class="form-control form-control-rounded" id="journalNameInput" name="journalName" autocomplete="off" placeholder="Enter journal name" required>
                            </div>
                            <div class="form-group">
                                <label for="language">Language</label>
                                <input type="text" class="form-control form-control-rounded" id="languageInput" name="language" autocomplete="off" placeholder="Enter language" required>
                            </div>
                            <div class="form-group">
                                <label for="issue">Issue</label>
                                <input type="text" class="form-control form-control-rounded" id="issueInput" name="issue" autocomplete="off" placeholder="Enter issue No." required>
                            </div>
                            <div class="form-group">
                                <label for="page">Pages</label>
                                <input type="text" class="form-control form-control-rounded" id="pageInput" name="page" autocomplete="off" placeholder="Enter Pages" required>
                            </div>
                            <div class="form-group">
                                <label for="doi">DOI Link</label>
                                <input type="text" class="form-control form-control-rounded" id="doiInput" name="doi" autocomplete="off" placeholder="Enter DOI Link" required>
                            </div>
                            <div class="form-group">
                                <label for="year">Date</label>
                                <input type="date" id="year" name="year" required>
                            </div>
                            <div class="form-group">
                                <label for="pdf">PDF File <small style="font-weight:bold">(Maximum length 2MB)</small></label>
                                <input type="file" id="pdf" name="pdf" required>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-light btn-round px-5">Save</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div><!--End Row-->
        <!--start overlay-->
        @*<div class="overlay toggle-menu"></div>*@
        <!--end overlay-->

    </div>
    <!-- End container-fluid-->

</div>

