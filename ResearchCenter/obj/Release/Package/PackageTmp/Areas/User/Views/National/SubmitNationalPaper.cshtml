
@{
    ViewBag.Title = "SubmitNationalPaper";
    Layout = "~/Areas/User/Views/Shared/_UserMainLayout.cshtml";
}

<nav class="navbar navbar-expand-lg navbar-transparent  bg-primary  navbar-absolute">
    <div class="container-fluid">
        <div class="navbar-wrapper">
            <div class="navbar-toggle">
                <button type="button" class="navbar-toggler">
                    <span class="navbar-toggler-bar bar1"></span>
                    <span class="navbar-toggler-bar bar2"></span>
                    <span class="navbar-toggler-bar bar3"></span>
                </button>
            </div>
            <span>National Papers submission</span>
        </div>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-bar navbar-kebab"></span>
            <span class="navbar-toggler-bar navbar-kebab"></span>
            <span class="navbar-toggler-bar navbar-kebab"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navigation">
            <form>
                <div class="input-group no-border">
                    <input type="text" value="" class="form-control" placeholder="Search...">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <i class="now-ui-icons ui-1_zoom-bold"></i>
                        </div>
                    </div>
                </div>
            </form>
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="now-ui-icons users_single-02"></i>
                        <p>
                            <span class="d-lg-none d-md-block">Account</span>
                        </p>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href=@Url.Action("Logout", "WebHome", new { area = "" })>Logout</a>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</nav>
<!-- End Navbar -->
<div class="panel-header panel-header-sm">
</div>
<div class="content">
    <div class="card">
        <div class="row mt-3 justify-content-center">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">Please fill with details</div>
                        <hr>
                        @using (Html.BeginForm("SubmitNationalPaper", "National", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            <div class="form-group">
                                <label for="journal">Journal</label>
                                <input type="text" class="form-control form-control-rounded" id="journalInput" name="journal" autocomplete="off" placeholder="Enter Your Journal Name" required>
                            </div>
                            <div class="form-group">
                                <label for="title">Title</label>
                                <input type="text" class="form-control form-control-rounded" id="titleInput" name="title" autocomplete="off" placeholder="Enter Your Title" required>
                            </div>
                            <div class="form-group">
                                <label for="faculty">Faculty</label>
                                <select class="form-control form-control-rounded" id="faculty" name="faculty" required>
                                    <option value="" disabled selected>Select Your Faculty</option>
                                    <option value="Computer Science">Computer Sciense</option>
                                    <option value="Economics">Economics</option>
                                    <option value="Education">Education</option>
                                    <option value="Engineering">Engineering</option>
                                    <option value="Journalism">Journalism</option>
                                    <option value="Language & Literature">Language & Literature</option>
                                    <option value="Law & Political Science">Law & Political Science</option>
                                    <option value="Medical">Medical</option>
                                    <option value="Pharmacy">Pharmacy</option>
                                    <option value="Public Administration & Policy">Public Administration & Policy</option>
                                    <option value="Sharia">Sharia</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="department">Department</label>
                                <input type="text" class="form-control form-control-rounded" id="deptInput" name="department" autocomplete="off" placeholder="Enter department" required>
                            </div>
                            <div class="form-group">
                                <label for="designation">Academic Rank</label>
                                <select class="form-control form-control-rounded" id="designation" name="designation" required>
                                    <option value="" disabled selected>Select Your Designation</option>
                                    <option value="Teaching Assistant">Teaching Assistant</option>
                                    <option value="Senior Teaching Assistant">Senior Teaching Assistant</option>
                                    <option value="Assistant Professor">Assistant Professor</option>
                                    <option value="Associate Professor">Associate Professor</option>
                                    <option value="Professor">Professor</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="name">Full Name</label>
                                <input type="text" class="form-control form-control-rounded" id="nameInput" name="name" autocomplete="off" placeholder="Enter your FirstName and LastName" required>
                            </div>
                            <div class="form-group">
                                <label for="issue">Issue</label>
                                <input type="text" class="form-control form-control-rounded" id="issueInput" name="issue" autocomplete="off" placeholder="Enter issue No." required>
                            </div>
                            <div class="form-group">
                                <label for="year">Date</label>
                                <input type="date" id="year" name="year" required>
                            </div>
                            <div class="form-group">
                                <label for="pdf">PDF File <small style="font-weight:bold">(Maximum length 2MB)</small></label>
                                <input type="file" id="pdf" name="pdf" required>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-light btn-round px-5">Submit</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    
</div>

