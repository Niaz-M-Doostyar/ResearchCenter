
@{
    ViewBag.Title = "ShowCarousel";
    Layout = "~/Views/Shared/_MainLayoutPage.cshtml";
}

<div class="content-wrapper">
    <div class="container-fluid">

        @*<div class="col-lg-12">*@
        <div class="card">
            <div class="card-body">
                <div class="row align-items-center py-4">
                    <div class="col-lg-6 col-7">
                        <h5 class="card-title">Slider</h5>
                    </div>
                    <div class="col-lg-6 col-5 text-right">
                        <a href=@Url.Action("AddCarousel","Carousel") class="btn btn-sm btn-neutral text-white bg-dark-light">New</a>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">No.</th>
                                <th scope="col">Description</th>
                                <th scope="col">Image</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Rows.Count; i++)
                            {
                                <tr>
                                    <td>@Model.Rows[i][0]</td>
                                    <td>@Model.Rows[i][1]</td>
                                    <td>
                                        @{
                                            string src = "~/UploadedFiles/" + @Model.Rows[i][2];
                                        }
                                        <img src="@Url.Content(src)" width="100" height="100" />
                                    </td>
                                    <td>
                                        <a class="btn btn-sm btn-primary" href=@Url.Action("EditCarousel", "Carousel", new { @id=@Model.Rows[i][0] })>Edit</a>
                                        <a class="btn btn-sm btn-danger" href=@Url.Action("DeleteCarousel", "Carousel", new { @id=@Model.Rows[i][0] })>Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!--start overlay-->
    <div class="overlay toggle-menu"></div>
    <!--end overlay-->

</div>


