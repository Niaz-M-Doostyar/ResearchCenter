@model System.Data.DataTable
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_MainLayoutPage.cshtml";
}

<div class="content-wrapper">
    <div class="container-fluid">

        <div class="row mt-3 justify-content-center">

            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">Please fill with details</div>
                        <hr>
                        @for (int i = 0; i < Model.Rows.Count; i++)
                        {
                            using (Html.BeginForm("Edit", "NationalPaper", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <div class="form-group">
                                    <label for="journal">Journal</label>
                                    <input type="text" class="form-control form-control-rounded" id="journal" name="journal" autocomplete="off" value="@Model.Rows[i][1]" required>
                                </div>
                                <div class="form-group">
                                    <label for="title">Title</label>
                                    <input type="text" class="form-control form-control-rounded" id="title" name="title" autocomplete="off" value="@Model.Rows[i][3]" required>
                                </div>
                                <div class="form-group">
                                    <label for="faculty">Faculty</label>
                                    <select class="form-control form-control-rounded" id="faculty" name="faculty" required>
                                        <option>@Model.Rows[i][4]</option>
                                        <option value="Computer Science">Computer Sciense</option>
                                        <option value="Economics">Economics</option>
                                        <option value="Education">Education</option>
                                        <option value="Engineering">Engineering</option>
                                        <option value="Journalism">Journalism</option>
                                        <option value="Language & Literature">Language & Literature</option>
                                        <option value="Law & Political Science">Law & Political Science</option>
                                        <option value="Medical">Medical</option>
                                        <option value="Pharmacy">Pharmacy</option>
                                        <option value="Public Administration & Policy">Public Administration & Policy</option>
                                        <option value="Sharia">Sharia</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="department">Department</label>
                                    <input type="text" class="form-control form-control-rounded" id="department" name="department" autocomplete="off" value="@Model.Rows[i][5]" required>
                                </div>
                                <div class="form-group">
                                    <label for="designation">Academic Rank</label>
                                    <select class="form-control form-control-rounded" id="designation" name="designation" required>
                                        <option>@Model.Rows[i][6]</option>
                                        <option value="Teaching Assistant">Teaching Assistant</option>
                                        <option value="Senior Teaching Assistant">Senior Teaching Assistant</option>
                                        <option value="Assistant Professor">Assistant Professor</option>
                                        <option value="Associate Professor">Associate Professor</option>
                                        <option value="Professor">Professor</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="name">Full Name</label>
                                    <input type="text" class="form-control form-control-rounded" id="name" name="name" autocomplete="off" value="@Model.Rows[i][7]" required>
                                </div>
                                <div class="form-group">
                                    <label for="issue">Issue</label>
                                    <input type="text" class="form-control form-control-rounded" id="issue" name="issue" autocomplete="off" value="@Model.Rows[i][8]" required>
                                </div>
                                <div class="form-group">
                                    <label for="comment">Comment</label>
                                    <input type="text" class="form-control form-control-rounded" id="comment" name="comment" autocomplete="off" value="@Model.Rows[i][10]">
                                </div>
                                <div class="form-group">
                                    <label for="year">Date</label>
                                    @{
                                        var date = Model.Rows[i][2];
                                        if (date is DateTime dateTime)
                                        {

                                            <input type="date" id="year" name="year" value=@dateTime.ToString("yyyy-MM-dd") required>
                                        }
                                        else
                                        {
                                            @date;
                                        }
                                    }
                                </div>
                                <div class="form-group">
                                    <label for="pdf">PDF File <small style="font-weight:bold">(Maximum length 2MB)</small></label>
                                    <input type="file" id="pdf" name="pdf">
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-light btn-round px-5">Submit</button>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div><!--End Row-->
        <!--start overlay-->
        <div class="overlay toggle-menu"></div>
        <!--end overlay-->

    </div>
    <!-- End container-fluid-->

</div>

